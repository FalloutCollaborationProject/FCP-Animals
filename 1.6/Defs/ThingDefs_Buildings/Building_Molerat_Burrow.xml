<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="BuildingNaturalBase">
        <defName>FCP_Infestation_Burrow</defName>
        <label>mole rat burrow</label>
        <description>An active mole rat burrow. If left alone, it will spawn additional mole rats and spread more burrows throughout the area. The rodents will defend their territory aggressively.</description>
        <thingClass>Building</thingClass>
        <graphicData>
            <texPath>Things/Building/Natural/SteamGeyser</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>Transparent</shaderType>
            <drawSize>(4,4)</drawSize>
        </graphicData>
        <uiIconScale>0.5</uiIconScale>
        <altitudeLayer>Building</altitudeLayer>
        <rotatable>false</rotatable>
        <fillPercent>0.5</fillPercent>
        <statBases>
            <MaxHitPoints>200</MaxHitPoints>
            <Flammability>0.5</Flammability>
        </statBases>
        <pathCost>42</pathCost>
        <receivesSignals>true</receivesSignals>
        <blockWind>true</blockWind>
        <tickerType>Normal</tickerType>
        <passability>PassThroughOnly</passability>
        <size>(2,2)</size>
        <building>
            <claimable>false</claimable>
            <deconstructible>false</deconstructible>
        </building>
        <killedLeavings>
            <Meat_Megaspider>15</Meat_Megaspider>
        </killedLeavings>
        <comps>
            <li Class="CompProperties_CanBeDormant">
                <startsDormant>false</startsDormant>
                <canWakeUpFogged>false</canWakeUpFogged>
            </li>
            <li Class="CompProperties_WakeUpDormant" />
            <li Class="GauntletSpawners.CompProperties_GauntletSpawner">
                <possibleKindDefToSpawn>
                    <li>FCP_Animal_Molerat</li>
                </possibleKindDefToSpawn>
                <maxCount>8</maxCount>
                <spawnPerTrigger>2</spawnPerTrigger>
                <interval>3500</interval>
                <fuelUsed>1</fuelUsed>
                <uiIcon>Animals/Molerat/FCP_Molerat_east</uiIcon>
                <attackIcon>Animals/Molerat/FCP_Molerat_east</attackIcon>
                <gotoIcon>Animals/Molerat/FCP_Molerat_east</gotoIcon>
                <groupMarkingRadius>10</groupMarkingRadius>
                <autoHuntingInterval>250</autoHuntingInterval>
            </li>
            <li Class="CompProperties_SelfhealHitpoints">
                <ticksPerHeal>6000</ticksPerHeal>
            </li>
            <li Class="CompProperties_SpawnerFilth">
                <filthDef>Filth_Dirt</filthDef>
                <spawnCountOnSpawn>8</spawnCountOnSpawn>
                <spawnMtbHours>6</spawnMtbHours>
                <spawnRadius>4</spawnRadius>
            </li>
        </comps>
    </ThingDef>

</Defs>
