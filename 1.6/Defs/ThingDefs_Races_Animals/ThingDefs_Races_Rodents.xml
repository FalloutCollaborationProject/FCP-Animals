    <!--___ Mole Rat ___-->

    <!-- ThingDef -->

    <ThingDef ParentName="AnimalThingBase">
        <defName>FCP_Animal_Molerat</defName>
        <label>Mole Rat</label>
        <description>A grotesque mutated rodent that has grown to an unusually large size. These hairless, aggressive creatures are common throughout the wasteland, particularly in underground areas and ruins. They travel in packs and will attack anything that enters their territory. Their meat is barely edible and their hide is nearly worthless, but they breed rapidly and can overwhelm unprepared travelers.</description>
        <statBases>
            <MoveSpeed>3.5</MoveSpeed>
            <MarketValue>100</MarketValue>
            <ComfyTemperatureMin>-15</ComfyTemperatureMin>
            <ComfyTemperatureMax>50</ComfyTemperatureMax>
            <ToxicEnvironmentResistance>0.90</ToxicEnvironmentResistance>
            <LeatherAmount>25</LeatherAmount>
        </statBases>
        <tools>
            <li>
                <label>claws</label>
                <labelNoLocation>claws</labelNoLocation>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>7.0</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
            </li>
            <li>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>10.0</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
                <chanceFactor>0.9</chanceFactor>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>3</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                <chanceFactor>0.1</chanceFactor>
            </li>
        </tools>
        <race>
            <body>QuadrupedAnimalWithPawsAndTail</body>
            <baseBodySize>1.0</baseBodySize>
            <baseHungerRate>0.4</baseHungerRate>
            <baseHealthScale>0.9</baseHealthScale>
            <foodType>OmnivoreRoughAnimal</foodType>
            <leatherDef>Leather_Plain</leatherDef>
            <manhunterOnTameFailChance>0.20</manhunterOnTameFailChance>
            <manhunterOnDamageChance>0.40</manhunterOnDamageChance>
            <gestationPeriodDays>8</gestationPeriodDays>
            <nameOnTameChance>0.25</nameOnTameChance>
            <trainability>None</trainability>
            <predator>false</predator>
            <soundEating>Rodent_Eat</soundEating>
            <wildBiomes>
                <AridShrubland>0.7</AridShrubland>
                <Desert>0.6</Desert>
                <ExtremeDesert>0.3</ExtremeDesert>
                <TemperateForest>0.5</TemperateForest>
                <BorealForest>0.3</BorealForest>
                <Tundra>0.2</Tundra>
            </wildBiomes>
            <litterSizeCurve>
                <points>
                    <li>(1, 0)</li>
                    <li>(2, 1)</li>
                    <li>(3, 1.5)</li>
                    <li>(4, 1)</li>
                    <li>(5, 0.5)</li>
                    <li>(6, 0)</li>
                </points>
            </litterSizeCurve>
            <lifeExpectancy>6</lifeExpectancy>
            <lifeStageAges>
                <li>
                    <def>AnimalBabyTiny</def>
                    <minAge>0</minAge>
                </li>
                <li>
                    <def>AnimalJuvenile</def>
                    <minAge>0.08</minAge>
                </li>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>0.25</minAge>
                    <soundWounded>Pawn_Rodent_Wounded</soundWounded>
                    <soundDeath>Pawn_Rodent_Death</soundDeath>
                    <soundCall>Pawn_Rodent_Call</soundCall>
                    <soundAngry>Pawn_Rodent_Angry</soundAngry>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
        </race>
        <tradeTags>
            <li>FCP_Animal_Common</li>
        </tradeTags>
    </ThingDef>

