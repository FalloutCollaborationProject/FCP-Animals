                <li>(0.25, 0, 0.18)</li>
                <li>(0.0, 0, 0.07)</li>
                <li>(-0.25, 0, 0.18)</li>
            </headPosPerRotation>
        </race>
        <tradeTags>
            <li>FCP_Animal_Farm</li>
        </tradeTags>
        <tools>
            <li>
                <label>claws</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>2</power>
                <cooldownTime>1.5</cooldownTime>
                <linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
            </li>
            <li>
                <label>beak</label>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>3</power>
                <cooldownTime>2</cooldownTime>
