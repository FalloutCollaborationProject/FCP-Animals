    <ThingDef ParentName="AnimalThingBase">
        <defName>FCP_Animal_Rad_Chicken</defName>
        <label>Rad Chicken</label>
        <devNote>Rad Chicken</devNote>
        <description>A common sight on wasteland farms and ranches as well as small towns. It can grow fast and be farmed for eggs, meat and the occasional feather.</description>
        <statBases>
            <MoveSpeed>2.1</MoveSpeed>
            <MarketValue>50</MarketValue>
            <LeatherAmount>0</LeatherAmount>
            <ComfyTemperatureMin>-10</ComfyTemperatureMin>
            <FilthRate>4</FilthRate>
            <ToxicEnvironmentResistance>0.9</ToxicEnvironmentResistance>
        </statBases>
        <comps>
            <li Class="CompProperties_EggLayer">
                <eggUnfertilizedDef>FCP_Egg_Rad_Chicken_Unfertilized</eggUnfertilizedDef>
                <eggFertilizedDef>FCP_Egg_Rad_Chicken_Fertilized</eggFertilizedDef>
                <eggFertilizationCountMax>1</eggFertilizationCountMax>
                <eggLayIntervalDays>2</eggLayIntervalDays>
                <eggCountRange>0~4</eggCountRange>
            </li>
        </comps>
        <race>
            <body>Bird</body>
            <baseHungerRate>0.14</baseHungerRate>
            <baseBodySize>0.3</baseBodySize>
            <baseHealthScale>0.35</baseHealthScale>
            <foodType>VegetarianRoughAnimal</foodType>
            <trainability>None</trainability>
            <roamMtbDays>7</roamMtbDays>
            <mateMtbHours>8</mateMtbHours>
            <lifeExpectancy>6</lifeExpectancy>
            <lifeStageAges>
                <li>
                    <def>AnimalBabyTiny</def>
                    <minAge>0</minAge>
                    <soundWounded>Pawn_Chick_Call</soundWounded>
                    <soundDeath>Pawn_Chick_Call</soundDeath>
                    <soundCall>Pawn_Chick_Call</soundCall>
                    <soundAngry>Pawn_Chick_Call</soundAngry>
                </li>
                <li>
                    <def>AnimalJuvenile</def>
                    <minAge>0.12</minAge>
                </li>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>0.2</minAge>
                    <soundWounded>Pawn_Chicken_Wounded</soundWounded>
                    <soundDeath>Pawn_Chicken_Death</soundDeath>
                    <soundCall>Pawn_Chicken_Call</soundCall>
                    <soundAngry>Pawn_Chicken_Angry</soundAngry>
