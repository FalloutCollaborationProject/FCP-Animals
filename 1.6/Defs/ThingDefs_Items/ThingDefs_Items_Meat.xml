    <!--_____ Poultry Meats _____-->

    <!--___ Irradiated Poultry ___-->

    <!-- Used by: Mutant birds, rad chickens, rad ravens -->

    <ThingDef ParentName="FCP_WastelandMeatBase">
        <defName>FCP_Meat_Poultry</defName>
        <label>irradiated poultry</label>
        <description>Meat from mutated wasteland birds. The flesh is recognizable as poultry but has an off-color tint and unusual smell from radiation exposure. While still edible and familiar in texture, it's clearly not from any pre-war chicken.</description>
        <graphicData>
            <texPath>Things/Items/Meats/Poultry/Poultry_Meat</texPath>
            <color>(245,220,200)</color>
        </graphicData>
        <statBases>
            <MarketValue>1.6</MarketValue>
        </statBases>
