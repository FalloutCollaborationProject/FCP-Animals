<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--__________ Wasteland Meats __________-->
    
    <!--_____ Base Meat Parent _____-->

    <ThingDef Abstract="True" Name="FCP_WastelandMeatBase" ParentName="OrganicProductBase">
        <thingClass>ThingWithComps</thingClass>
        <category>Item</category>
        <tickerType>Rare</tickerType>
        <socialPropernessMatters>true</socialPropernessMatters>
        <stackLimit>75</stackLimit>
        <resourceReadoutPriority>Last</resourceReadoutPriority>
        <graphicData>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <statBases>
            <MaxHitPoints>60</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <DeteriorationRate>6</DeteriorationRate>
            <Mass>0.03</Mass>
            <Nutrition>0.05</Nutrition>
            <FoodPoisonChanceFixedHuman>0.02</FoodPoisonChanceFixedHuman>
        </statBases>
        <ingestible>
            <foodType>Meat</foodType>
            <preferability>RawBad</preferability>
            <tasteThought>AteRawFood</tasteThought>
            <ingestEffect>EatMeat</ingestEffect>
            <ingestSound>RawMeat_Eat</ingestSound>
        </ingestible>
        <comps>
            <li Class="CompProperties_Rottable">
                <daysToRotStart>2</daysToRotStart>
                <rotDestroys>true</rotDestroys>
            </li>
        </comps>
        <thingCategories>
            <li>MeatRaw</li>
        </thingCategories>
    </ThingDef>

    <!--_____ Beast Meats _____-->

    <!--___ Beast Meat ___-->

    <!-- Used by: Standard wasteland animals -->

    <ThingDef ParentName="FCP_WastelandMeatBase">
        <defName>FCP_Meat_Beast</defName>
        <label>beast meat</label>
        <description>Raw meat from wasteland beasts. The flesh is tougher and has a slightly off taste compared to domesticated animals, bearing the marks of radiation and harsh conditions. Suitable for meals, though it may contain trace amounts of wasteland contamination.</description>
        <graphicData>
            <texPath>Things/Items/Meats/Beast/Beast_Meat</texPath>
        </graphicData>
        <statBases>
            <MarketValue>1.8</MarketValue>
        </statBases>
        <ingestible>
            <outcomeDoers>
                <li Class="IngestionOutcomeDoer_GiveHediff">
                    <hediffDef>ToxicBuildup</hediffDef>
                    <severity>0.01</severity>
                </li>
            </outcomeDoers>
        </ingestible>
    </ThingDef>

    <!--___ Prime Beast Meat ___-->

    <!-- Used by: Yao Guai, Radstag, Brahmin, and other premium large animals -->

    <ThingDef ParentName="FCP_WastelandMeatBase">
        <defName>FCP_Meat_Prime_Beast</defName>
        <label>prime beast meat</label>
        <description>Exceptionally high-quality meat from a healthy, well-fed wasteland beast. The muscle tissue is well-marbled and surprisingly clean considering its origins. Prime cuts like these are rare finds and command premium prices. Still carries minimal radiation exposure from the wasteland environment.</description>
        <graphicData>
            <texPath>Things/Items/Meats/Beast/Prime_Beast_Meat</texPath>
        </graphicData>
        <statBases>
            <MarketValue>2.8</MarketValue>
            <Nutrition>0.06</Nutrition>
        </statBases>
        <ingestible>
            <preferability>RawTasty</preferability>
            <outcomeDoers>
                <li Class="IngestionOutcomeDoer_GiveHediff">
                    <hediffDef>ToxicBuildup</hediffDef>
                    <severity>0.005</severity>
                </li>
            </outcomeDoers>
        </ingestible>
    </ThingDef>

    <!--_____ Bug Meats _____-->

    <!--___ Bug Meat ___-->

    <!-- Used by: Radroaches, standard mutant insects -->

    <ThingDef ParentName="FCP_WastelandMeatBase">
        <defName>FCP_Meat_Bug</defName>
        <label>bug meat</label>
        <description>Raw meat harvested from mutated wasteland insects. The flesh has an unusual texture and a faintly bitter taste. While nutritious, the high concentration of strange compounds from the insect's diet of irradiated materials makes it somewhat toxic.</description>
        <graphicData>
            <texPath>Things/Items/Meats/Bug/Bug_Meat</texPath>
        </graphicData>
        <statBases>
            <MarketValue>0.8</MarketValue>
        </statBases>
        <ingestible>
            <outcomeDoers>
                <li Class="IngestionOutcomeDoer_GiveHediff">
                    <hediffDef>ToxicBuildup</hediffDef>
                    <severity>0.02</severity>
                </li>
            </outcomeDoers>
        </ingestible>
    </ThingDef>

    <!--___ Plumb Bug Meat ___-->

    <!-- Used by: Higher tier mutant insects, glowing variants -->

    <ThingDef ParentName="FCP_WastelandMeatBase">
        <defName>FCP_Meat_Plumb_Bug</defName>
        <label>plumb bug meat</label>
        <description>Exceptionally fat and juicy meat from well-fed mutant insects. The tissue is swollen with nutritious compounds, making it more palatable than typical bug meat. Wasteland survivors prize these cuts, though they still carry moderate toxicity from the creature's irradiated diet.</description>
        <graphicData>
            <texPath>Things/Items/Meats/Bug/Plumb_Bug_Meat</texPath>
        </graphicData>
        <statBases>
            <MarketValue>1.5</MarketValue>
            <Nutrition>0.06</Nutrition>
        </statBases>
        <ingestible>
            <preferability>RawTasty</preferability>
            <outcomeDoers>
                <li Class="IngestionOutcomeDoer_GiveHediff">
                    <hediffDef>ToxicBuildup</hediffDef>
                    <severity>0.015</severity>
                </li>
            </outcomeDoers>
        </ingestible>
    </ThingDef>

    <!--_____ Mirelurk Meats _____-->

    <!--___ Mirelurk Meat ___-->

    <!-- Used by: All mirelurk variants, wasteland crustaceans -->

    <ThingDef ParentName="FCP_WastelandMeatBase">
        <defName>FCP_Meat_Crab</defName>
        <label>mirelurk meat</label>
        <description>Firm, white meat harvested from wasteland crustaceans. The flesh is dense and flavorful, though it tends to absorb waterborne contaminants from the creature's aquatic habitat. Popular among coastal survivors despite the mild radiation.</description>
        <graphicData>
            <texPath>Things/Items/Meats/Fish/Crab_Meat</texPath>
        </graphicData>
        <statBases>
            <MarketValue>2.2</MarketValue>
        </statBases>
        <ingestible>
            <outcomeDoers>
                <li Class="IngestionOutcomeDoer_GiveHediff">
                    <hediffDef>ToxicBuildup</hediffDef>
                    <severity>0.012</severity>
                </li>
            </outcomeDoers>
        </ingestible>
    </ThingDef>

    <!--___ Succulent Fish Meat ___-->

    <!-- Used by: Fish -->

    <ThingDef ParentName="FCP_WastelandMeatBase">
        <defName>FCP_Meat_Succulent_Fish</defName>
        <label>succulent fish meat</label>
        <description>Delicate, flavorful meat from wasteland fish. Its texture is tender and moist, making it a rare delicacy among survivors. While highly nutritious, it may still carry trace contaminants from irradiated waters.</description>
        <graphicData>
            <texPath>Things/Items/Meats/Fish/Succulent_Fish_Meat</texPath>
        </graphicData>
        <statBases>
            <MarketValue>3.2</MarketValue>
            <Nutrition>0.06</Nutrition>
        </statBases>
        <ingestible>
            <preferability>RawTasty</preferability>
