                            </groups>
                        </li>
                    </parts>
                </li>
                <!-- Neck -->
                <li>
                    <def>Neck</def>
                    <coverage>0.08</coverage>
                    <height>Top</height>
                </li>
                <!-- Torso -->
                <li>
                    <def>Torso</def>
                    <coverage>0.30</coverage>
                    <height>Middle</height>
                    <depth>Outside</depth>
                    <parts>
                        <li>
                            <def>Ribcage</def>
                            <coverage>0.18</coverage>
                            <depth>Inside</depth>
                            <parts>
                                <li>
                                    <def>Heart</def>
                                    <coverage>0.04</coverage>
                                    <depth>Inside</depth>
                                </li>
                                <li>
                                    <def>Lung</def>
                                    <customLabel>left lung</customLabel>
                                    <coverage>0.06</coverage>
                                    <depth>Inside</depth>
                                </li>
                                <li>
                                    <def>Lung</def>
                                    <customLabel>right lung</customLabel>
                                    <coverage>0.06</coverage>
                                    <depth>Inside</depth>
                                </li>
                            </parts>
                        </li>
                        <li>
                            <def>Stomach</def>
                            <coverage>0.08</coverage>
                            <depth>Inside</depth>
                        </li>
                        <li>
                            <def>Liver</def>
                            <coverage>0.05</coverage>
                            <depth>Inside</depth>
                        </li>
                        <li>
                            <def>Kidney</def>
                            <customLabel>left kidney</customLabel>
                            <coverage>0.03</coverage>
                            <depth>Inside</depth>
                        </li>
                        <li>
                            <def>Kidney</def>
                            <customLabel>right kidney</customLabel>
                            <coverage>0.03</coverage>
                            <depth>Inside</depth>
                        </li>
                    </parts>
                </li>
                <!-- Powerful clawed arms -->
                <li>
                    <def>Shoulder</def>
                    <customLabel>left shoulder</customLabel>
                    <coverage>0.08</coverage>
                    <height>Middle</height>
                    <parts>
                        <li>
                            <def>Arm</def>
                            <customLabel>left arm</customLabel>
                            <coverage>0.15</coverage>
                            <groups>
                                <li>Arms</li>
                            </groups>
                            <parts>
                                <li>
                                    <def>Hand</def>
                                    <customLabel>left claw</customLabel>
                                    <coverage>0.25</coverage>
                                    <groups>
                                        <li>FrontLeftClaws</li>
                                    </groups>
                                </li>
                            </parts>
                        </li>
                    </parts>
                </li>
                <li>
                    <def>Shoulder</def>
                    <customLabel>right shoulder</customLabel>
                    <coverage>0.08</coverage>
                    <height>Middle</height>
                    <parts>
                        <li>
                            <def>Arm</def>
                            <customLabel>right arm</customLabel>
                            <coverage>0.15</coverage>
                            <groups>
                                <li>Arms</li>
                            </groups>
                            <parts>
                                <li>
                                    <def>Hand</def>
