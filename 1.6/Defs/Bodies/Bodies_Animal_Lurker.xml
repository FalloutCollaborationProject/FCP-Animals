<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--__________ Bodies __________-->

    <!-- Mirelurks -->

    <BodyDef>
        <defName>FCP_Mirelurk_Body</defName>
        <label>Mirelurk</label>
        <corePart>
            <def>Shell</def>
            <height>Middle</height>
            <depth>Outside</depth>
            <parts>
                <!-- Core internal organs -->
                <li>
                    <def>Stomach</def>
                    <coverage>0.05</coverage>
                    <depth>Inside</depth>
                </li>
                <li>
                    <def>InsectHeart</def>
                    <coverage>0.03</coverage>
                    <depth>Inside</depth>
                </li>
                <!-- Head section with sensory organs -->
                <li>
                    <def>Pronotum</def>
                    <coverage>0.20</coverage>
                    <height>Top</height>
                    <parts>
                        <li>
                            <def>InsectHead</def>
                            <coverage>0.70</coverage>
                            <groups>
                                <li>HeadAttackTool</li>
                            </groups>
                            <parts>
                                <li>
                                    <def>Brain</def>
                                    <coverage>0.18</coverage>
                                    <depth>Inside</depth>
                                </li>
                                <li>
                                    <def>Eye</def>
                                    <customLabel>left eye</customLabel>
                                    <coverage>0.10</coverage>
                                </li>
                                <li>
                                    <def>Eye</def>
                                    <customLabel>right eye</customLabel>
                                    <coverage>0.10</coverage>
                                </li>
                                <li>
                                    <def>InsectNostril</def>
                                    <coverage>0.05</coverage>
                                </li>
                                <li>
                                    <def>InsectMouth</def>
                                    <coverage>0.12</coverage>
                                    <groups>
                                        <li>Mouth</li>
                                    </groups>
                                </li>
                            </parts>
                        </li>
                    </parts>
                </li>
                <!-- Left claw with body part group -->
                <li>
                    <def>HeadClaw</def>
                    <customLabel>left claw</customLabel>
                    <coverage>0.12</coverage>
                    <height>Middle</height>
                    <groups>
                        <li>FrontLeftClaws</li>
                    </groups>
                </li>
                <!-- Right claw with body part group -->
                <li>
                    <def>HeadClaw</def>
                    <customLabel>right claw</customLabel>
                    <coverage>0.12</coverage>
                    <height>Middle</height>
                    <groups>
                        <li>FrontRightClaws</li>
                    </groups>
                </li>
                <!-- Walking legs -->
                <li>
                    <def>InsectLeg</def>
                    <customLabel>front left leg</customLabel>
                    <coverage>0.06</coverage>
                    <height>Bottom</height>
                    <groups>
                        <li>FrontLeftLeg</li>
                    </groups>
                </li>
                <li>
                    <def>InsectLeg</def>
                    <customLabel>front right leg</customLabel>
                    <coverage>0.06</coverage>
                    <height>Bottom</height>
                    <groups>
                        <li>FrontRightLeg</li>
                    </groups>
                </li>
                <li>
                    <def>InsectLeg</def>
                    <customLabel>middle left leg</customLabel>
                    <coverage>0.06</coverage>
                    <height>Bottom</height>
                </li>
                <li>
                    <def>InsectLeg</def>
                    <customLabel>middle right leg</customLabel>
                    <coverage>0.06</coverage>
                    <height>Bottom</height>
                </li>
                <li>
                    <def>InsectLeg</def>
                    <customLabel>rear left leg</customLabel>
                    <coverage>0.06</coverage>
                    <height>Bottom</height>
                </li>
                <li>
                    <def>InsectLeg</def>
                    <customLabel>rear right leg</customLabel>
                    <coverage>0.06</coverage>
                    <height>Bottom</height>
                </li>
            </parts>
        </corePart>
    </BodyDef>

    <!-- Lakelurk -->

    <BodyDef>
        <defName>FCP_Lakelurk_Body</defName>
        <label>Lakelurk</label>
        <corePart>
            <def>Body</def>
            <height>Middle</height>
            <depth>Outside</depth>
            <parts>
                <!-- Head with powerful jaws -->
                <li>
                    <def>Head</def>
                    <coverage>0.12</coverage>
                    <groups>
                        <li>FullHead</li>
                        <li>HeadAttackTool</li>
                    </groups>
                    <parts>
                        <li>
                            <def>Skull</def>
                            <coverage>0.22</coverage>
                            <depth>Inside</depth>
                            <parts>
                                <li>
                                    <def>Brain</def>
                                    <coverage>0.80</coverage>
                                    <depth>Inside</depth>
                                </li>
                            </parts>
                        </li>
                        <li>
                            <def>Eye</def>
                            <customLabel>left eye</customLabel>
                            <coverage>0.10</coverage>
                        </li>
                        <li>
                            <def>Eye</def>
                            <customLabel>right eye</customLabel>
                            <coverage>0.10</coverage>
                        </li>
                        <li>
                            <def>Nose</def>
                            <coverage>0.08</coverage>
                        </li>
                        <li>
                            <def>Jaw</def>
                            <coverage>0.18</coverage>
                            <groups>
                                <li>Mouth</li>
                            </groups>
                        </li>
                    </parts>
                </li>
                <!-- Neck -->
                <li>
                    <def>Neck</def>
                    <coverage>0.10</coverage>
                    <height>Top</height>
                </li>
                <!-- Shell-covered torso -->
                <li>
                    <def>Torso</def>
                    <coverage>0.28</coverage>
                    <height>Middle</height>
                    <depth>Outside</depth>
                    <parts>
                        <li>
                            <def>Ribcage</def>
                            <coverage>0.15</coverage>
                            <depth>Inside</depth>
                            <parts>
                                <li>
                                    <def>Heart</def>
                                    <coverage>0.05</coverage>
                                    <depth>Inside</depth>
                                </li>
                                <li>
                                    <def>Lung</def>
                                    <customLabel>left lung</customLabel>
                                    <coverage>0.07</coverage>
                                    <depth>Inside</depth>
                                </li>
                                <li>
                                    <def>Lung</def>
                                    <customLabel>right lung</customLabel>
                                    <coverage>0.07</coverage>
                                    <depth>Inside</depth>
                                </li>
                            </parts>
                        </li>
                        <li>
                            <def>Stomach</def>
                            <coverage>0.07</coverage>
                            <depth>Inside</depth>
                        </li>
                        <li>
                            <def>Liver</def>
                            <coverage>0.04</coverage>
                            <depth>Inside</depth>
                        </li>
                        <li>
                            <def>Kidney</def>
                            <customLabel>left kidney</customLabel>
                            <coverage>0.03</coverage>
                            <depth>Inside</depth>
                        </li>
                        <li>
                            <def>Kidney</def>
                            <customLabel>right kidney</customLabel>
                            <coverage>0.03</coverage>
                            <depth>Inside</depth>
                        </li>
                    </parts>
                </li>
                <!-- Webbed clawed hands -->
                <li>
                    <def>Shoulder</def>
                    <customLabel>left shoulder</customLabel>
                    <coverage>0.07</coverage>
                    <height>Middle</height>
                    <parts>
                        <li>
                            <def>Arm</def>
                            <customLabel>left arm</customLabel>
                            <coverage>0.12</coverage>
                            <groups>
                                <li>Arms</li>
                            </groups>
                            <parts>
                                <li>
                                    <def>Hand</def>
                                    <customLabel>left webbed claw</customLabel>
                                    <coverage>0.20</coverage>
                                    <groups>
                                        <li>FrontLeftClaws</li>
                                    </groups>
                                </li>
                            </parts>
                        </li>
                    </parts>
                </li>
                <li>
                    <def>Shoulder</def>
                    <customLabel>right shoulder</customLabel>
                    <coverage>0.07</coverage>
                    <height>Middle</height>
                    <parts>
                        <li>
                            <def>Arm</def>
                            <customLabel>right arm</customLabel>
                            <coverage>0.12</coverage>
                            <groups>
                                <li>Arms</li>
                            </groups>
                            <parts>
                                <li>
                                    <def>Hand</def>
                                    <customLabel>right webbed claw</customLabel>
                                    <coverage>0.20</coverage>
                                    <groups>
                                        <li>FrontRightClaws</li>
                                    </groups>
                                </li>
                            </parts>
                        </li>
                    </parts>
                </li>
                <!-- Webbed feet for swimming -->
                <li>
                    <def>Leg</def>
                    <customLabel>left leg</customLabel>
                    <coverage>0.12</coverage>
                    <height>Bottom</height>
                    <groups>
                        <li>Legs</li>
                    </groups>
                </li>
                <li>
                    <def>Leg</def>
                    <customLabel>right leg</customLabel>
                    <coverage>0.12</coverage>
                    <height>Bottom</height>
                    <groups>
                        <li>Legs</li>
                    </groups>
                </li>
            </parts>
        </corePart>
    </BodyDef>

    <!-- Lakelurk King -->

    <BodyDef>
        <defName>FCP_Lakelurk_King_Body</defName>
        <label>Lakelurk King</label>
        <corePart>
